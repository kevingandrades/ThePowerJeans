---
import { GitHub } from '@icons';
---

<footer>
	<a
		class = "pointer"
		href = 'https://github.com/kevingjs/ThePowerJeans'
		target = '_blank'
		rel = 'noopener'
		aria-label = 'Source code'
		title = 'Source code'
	>
		<GitHub />
	</a>
</footer>

<style>
	footer {
		display: flex;
		align-items: flex-end;
		justify-content: flex-end;
		position: absolute;
		bottom: 0;
		padding: 1em;
		width: 100%;
		height: 100%;
	}

	footer > a {
		display: flex;
		align-items: center;
		justify-content: center;
	}

	footer > a > :global(svg) {
		width: 24px;
		color: var(--black);
	}
	
	footer > a:hover > :global(svg) {
		color: #1c43f1;
	}
</style>